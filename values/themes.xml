<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContectApp_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/themecolor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/bg_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ContectApp_Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Splash.ContectApp" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:fullDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:editTextColor">@android:color/black</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>


    <style name="AppTheme.FadeAnimation" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/FadeWindowAnimation</item>
    </style>

    <style name="FadeWindowAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="light_theme" parent="Theme.ContectApp_Light">

        <item name="bg_color">@color/bg_color_white</item>
        <item name="text_color">#000000</item>
        <item name="lang_bg_color">#F3F4F8</item>
        <item name="default_bg_color">#ffffff</item>
        <item name="theme_color">@color/themecolor</item>
        <item name="continuescreen_color">#E7F9EF</item>
        <item name="continuescreen_bg">@drawable/splash_bg</item>
        <item name="default_banner_bg">@drawable/ic_defult_banner</item>
        <item name="unslect_color">@color/unslect_color</item>
        <item name="navigation_bg_color">@color/white</item>
        <item name="navigation_bg_color_top">#F3F4F8</item>
        <item name="second_text_color">#9F9F9F</item>
        <item name="arrow_color">#9F9F9F</item>
        <item name="radio_btn_color">#CACACA</item>
        <item name="dialog_cancel">#A3A9AE</item>
        <item name="line_transperent">#0F000000</item>
        <item name="dialg_bg_number">#F5F5F5</item>
        <item name="black_transprent">#94000000</item>
        <item name="call_btn_bg">#F5F5F5</item>
        <item name="add_color_bg">#E1E7ED</item>
        <item name="popup_border">#ffffff</item>
    </style>


    <style name="Dark_theme" parent="Theme.ContectApp_Dark">
        <item name="bg_color">@color/bg_color</item>
        <item name="text_color">#ffffff</item>
        <item name="lang_bg_color">#121212</item>
        <item name="default_bg_color">#121212</item>
        <item name="theme_color">@color/themecolor</item>
        <item name="continuescreen_color">#112319</item>
        <item name="continuescreen_bg">@drawable/welcome_bg_dark</item>
        <item name="default_banner_bg">@drawable/ic_default_banner_dark</item>
        <item name="unslect_color">@color/unslect_color_dark</item>
        <item name="navigation_bg_color">#242424</item>
        <item name="navigation_bg_color_top">#242424</item>
        <item name="second_text_color">#4CFFFFFF</item>
        <item name="arrow_color">#595959</item>
        <item name="radio_btn_color">#595959</item>
        <item name="dialog_cancel">#616161</item>
        <item name="line_transperent">#0FFFFFFF</item>
        <item name="dialg_bg_number">#393939</item>
        <item name="black_transprent">#94000000</item>
        <item name="call_btn_bg">#383838</item>
        <item name="add_color_bg">#383838</item>
        <item name="popup_border">#2E2E2E</item>

    </style>

    <style name="text_style_fastscroll" parent="@android:style/TextAppearance.Widget.TabWidget">


        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="text_style" parent="@android:style/TextAppearance.Widget.TabWidget">


        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="text_style_unselec" parent="@android:style/TextAppearance.Widget.TabWidget">


        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="SlideToActView_Example" parent="@style/SlideToActView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_radius</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <!--    BottomSheet Dialog  -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetDialogAnimation</item>
    </style>


    <style name="BottomSheetDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/v_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/v_slide_out_bottom</item>
    </style>
    <style name="dialog_theme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_in_to_top</item>
    </style>
    <style name="DialpadButtonStyle">
        <item name="android:background">@color/purple_700</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:paddingTop">1dp</item>
    </style>

    <style name="DialPadNumberStylecall">
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>




    <style name="DialPadNumberStyle">
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">?text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="DialPadLetterStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?text_color</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="DialpadLetterStyle">
        <item name="android:textSize">@dimen/dialpad_letters_text_size</item>
        <item name="android:alpha">0.8</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="KeypadButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CallButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnSpan">3</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#4CAF50</item>
    </style>


    <style name="Widget.IndicatorFastScroll.FastScroller" parent="android:Widget">
        <item name="fastScrollerIconSize">20dp</item>
        <item name="fastScrollerIconColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fastScrollerTextPadding">@dimen/fast_scroller_default_text_padding</item>
    </style>

    <style name="Widget.IndicatorFastScroll.FastScrollerThumb" parent="android:Widget">
        <item name="fastScrollerIconSize">24dp</item>
        <item name="fastScrollerThumbColor">?colorPrimary</item>
        <item name="fastScrollerIconColor">?android:textColorPrimaryInverse</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

</resources>