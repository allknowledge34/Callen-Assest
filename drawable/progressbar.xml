<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background" android:height="20dp">
        <shape>
            <corners
                android:radius="25dp"/>
            <solid android:color="#D6D6D6"/>
        </shape>
    </item>
    <item
        android:id="@android:id/progress" android:height="20dp">
        <clip>
            <shape>
                <corners
                    android:radius="25dp"/>
                <solid android:color="@color/themecolor"/>
            </shape>
        </clip>
    </item>
</layer-list>